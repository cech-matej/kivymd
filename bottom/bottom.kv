#:import utils kivy.utils

BoxLayout:
    orientation:'vertical'

    MDToolbar:
        title: 'Bottom navigation'
        md_bg_color: utils.get_color_from_hex('0b132b')
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        id: navigation
        panel_color: utils.get_color_from_hex('6fffe9')

        MDBottomNavigationItem:
            name: 'screen 0'
            text: 'Hlavní'
            icon: 'home'

            MainScreen:

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'BMI'
            icon: 'text'

            TextScreen:

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Seznam'
            icon: 'card-bulleted'

            FormScreen:

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Tabulka'
            icon: 'grid'

            TableScreen:


<TextScreen>:
    name: 'textscreen'

    FloatLayout:
        #canvas:
        #    Color:
        #        rgba: app.theme_cls.primary_dark
        #    RoundedRectangle:
        #        pos: self.pos
        #        size: self.size
        #        radius: [10, 10, 10, 10]

        MDLabel:
            id: result
            text: 'Výsledek'
            color: 1, 1, 1
            size_hint: (.5, .1)
            pos_hint: {'center_x': .5, 'center_y': .9}
            halign: 'center'
            font_style: 'H5'
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('1c2541')
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: .8
            size_hint_y: .1
            pos_hint: {'center_x': .5, 'center_y': .7}
            height: self.minimum_height
            spacing: 10
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('3a506b')
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                text: 'Váha'
                halign: 'center'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .8
                    Rectangle:
                        pos: self.pos
                        size: self.size

            MDTextField:
                id: vaha
                mode: 'fill'

                required: True
                hint_text: "Hodnota v kg"

                color_mode: 'custom'
                line_color_focus: 0, 0, 0, 1


        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: .8
            size_hint_y: .1
            pos_hint: {'center_x': .5, 'center_y': .5}
            height: self.minimum_height
            spacing: 10
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('3a506b')
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                text: 'Výška'
                halign: 'center'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .8
                    Rectangle:
                        pos: self.pos
                        size: self.size

            MDTextField:
                id: vyska
                mode: 'fill'

                required: True
                hint_text: "Hodnota v cm"

                color_mode: 'custom'
                line_color_focus: 0, 0, 0, 1

        MDRaisedButton:
            text: "Vypočítej"
            md_bg_color: utils.get_color_from_hex('5bc0be')
            pos_hint: {'center_x': .5, 'center_y': .1}
            on_press:
                print("Stisknuto")
                root.ids.result.text = str(round(float(root.ids.vaha.text) / pow(int(root.ids.vyska.text) / 100, 2), 2))


